{
    "name": "obj2gl",
    "version": "1.0.0",
    "description": "Convert 3D models of OBJ files to float arrays compatible with OpenGL ES glDrawArrays.",
    "main": "main.js",
    "scripts": {
        "build-macos-x64": "pkg -c package.json -t node10-macos-x64 -o dist/obj2gl_macos_x64 main.js",
        "build-linux-x64": "pkg -c package.json -t node10-linux-x64 -o dist/obj2gl_linux_x64 main.js",
        "build-win-x64": "pkg -c package.json -t node10-win-x64 -o dist/obj2gl_win_x64.exe main.js"
    },
    "pkg": {
        "assets": ["templates/**/*", "package.json"]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xiaozhuai/obj2gl.git"
    },
    "author": "xiaozhuai",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/xiaozhuai/obj2gl/issues"
    },
    "homepage": "https://github.com/xiaozhuai/obj2gl#readme",
    "dependencies": {
        "dot": "^1.1.3",
        "yargs": "^15.3.0"
    },
    "devDependencies": {
        "@types/node": "^13.9.0",
        "@types/yargs": "^15.0.4",
        "pkg": "^4.4.4"
    }
}
